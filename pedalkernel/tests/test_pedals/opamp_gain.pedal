# Op-amp gain stage test â€” JRC4558 inverting amplifier
# Gain â‰ˆ -Rf/Ri = -47k/4.7k = -10
# Tests closed-loop gain accuracy

pedal "OpAmp Gain Test" {
  supply 9V
  components {
    C1: cap(100n)
    R_in: resistor(4.7k)
    U1: opamp(jrc4558)
    R_fb: resistor(47k)
    C2: cap(100n)
    R2: resistor(10k)
  }
  nets {
    in -> C1.a
    C1.b -> R_in.a
    R_in.b -> U1.neg
    U1.pos -> gnd
    R_fb.a -> U1.neg
    R_fb.b -> U1.out
    U1.out -> C2.a
    C2.b -> R2.a
    R2.b -> gnd
    C2.b -> out
  }
}
