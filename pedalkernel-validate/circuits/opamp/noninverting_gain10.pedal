# Non-Inverting Amplifier - Gain = 10 (1 + Rf/Ri = 1 + 90k/10k)
# Classic non-inverting op-amp configuration
# Vout = (1 + Rf/Ri) * Vin = 10 * Vin

pedal "Non-Inverting Amplifier x10" {
  components {
    U1: opamp(tl072)
    Ri: resistor(10k)   # Ground resistor
    Rf: resistor(90k)   # Feedback resistor (90k for gain of 10)
  }
  nets {
    # Input directly to non-inverting input
    in -> U1.pos

    # Voltage divider feedback to inverting input
    U1.out -> Rf.a
    Rf.b -> U1.neg
    U1.neg -> Ri.a
    Ri.b -> gnd

    # Output
    U1.out -> out
  }
}
